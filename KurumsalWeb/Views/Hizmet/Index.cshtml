@model  IEnumerable<KurumsalWeb.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-default" href="/Hizmet/Create">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>1.satır</th>
            <th>2.satır</th>
            <th>3.satır</th>
            <th>4.satır</th>
            <th>5.satır</th>
            <th>Aciklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HizmetId</td>
                <td>@item.Baslik</td>
                <td>@item.Satir1Aciklama</td>
                <td>@item.Satir2Aciklama</td>
                <td>@item.Satir3Aciklama</td>
                <td>@item.Satir4Aciklama</td>
                <td>@item.Satir5Aciklama</td>
                <td>@item.SonAciklama</td>
                @*<td>@Html.Raw(item.Aciklama)</td>*@
                <td><img width="100" height="100" src="@item.ResimURL" /> </td>
                <td><a href="/Hizmet/Edit/@item.HizmetId">Düzenle</a> | <a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>
            </tr>
        }
    </tbody>
</table>