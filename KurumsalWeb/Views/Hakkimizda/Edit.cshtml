@model KurumsalWeb.Models.Model.Hakkimizda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    CKEDITOR.replace('editor')
</script>

<h2>Hakkımızda Düzenle</h2>
<div class="panel-body">
    <div class="form">
        <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hakkimizda/Edit/@Model.HakkimizdaId" enctype="multipart/form-data">
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Aciklama" />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Satir 1 Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Satir1Aciklama" name="Satir1Aciklama" minlength="5" type="text" required />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Satir 2 Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Satir2Aciklama" name="Satir2Aciklama" minlength="5" type="text" required />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Satir 3 Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Satir3Aciklama" name="Satir3Aciklama" minlength="5" type="text" required />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Son Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="SonAciklama" name="SonAciklama" minlength="5" type="text" required value="@Model.SonAciklama" />
                </div>
            </div>
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Link <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Link" name="Link" minlength="5" type="text" required />
                </div>
            </div>
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2">Resim</label>
                <div class="col-lg-10">
                    <img src="@Model.ResimURL" height="150" width="150" />
                </div>
            </div>
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2">Resim</label>
                <div class="col-lg-10">
                    <input required type="file" class="form-control " name="ResimURL" accept=".jpg,.png,.jpeg" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-default" type="button"> <a href="/Hizmet/Index">İptal</a> </button>
                </div>
            </div>
        </form>
    </div>

</div>
